#include <stdio.h>
int main() 
{

    int n;
    scanf("%d", &n);
  	// Complete the code to print the pattern.
    int i, j, k;
    for(i=n; i>=1; i--)
    {
        for(j=n; j>=i; j--)
        printf("%d ", j);
        for(k=i; k>1; k--)
        printf("%d ", i);
        for(k=i; k>1; k--)
        printf("%d ", i);
        for(j=i; j<=n-1; j++)
        printf("%d ", j+1);
        printf("\n");
    }
    for(i=2; i<=n; i++)
    {
        for(j=n; j>=i; j--)
        printf("%d ", j);
        for(k=2; k<=i; k++)
        printf("%d ", i);
        for(k=2; k<=i; k++)
        printf("%d ", i);
        for(j=i; j<=n-1; j++)
        printf("%d ", j+1);
        printf("\n");
    }
    return 0;
}
